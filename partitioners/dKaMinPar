#!/bin/bash
IsInstalled() {
    if [[ ! -x "$PREFIX/bin/dKaMinPar" ]]; then
        return 1
    fi
    if [[ ! -d "$PREFIX/src/KaMinPar" ]]; then 
        return 1
    fi

    git -C "$PREFIX/src/KaMinPar" fetch
    local_hash=$(git -C "$PREFIX/src/KaMinPar" rev-parse HEAD)
    remote_hash=$(git -C "$PREFIX/src/KaMinPar" rev-parse @{u})
    if [[ "$local_hash" == "$remote_hash" ]]; then 
        return 0
    fi

    return 1
}

Binary() {
    echo "$PREFIX/bin/dKaMinPar"
}

Install() {
    if IsInstalled; then 
        return 0
    fi

    if [[ ! -d "$PREFIX/src/KaMinPar" ]]; then 
        git clone git@github.com:DanielSeemaier/KaMinPar.git "$PREFIX/src/KaMinPar"
        git -C "$PREFIX/src/KaMinPar" submodule update --init --recursive
    else 
        git -C "$PREFIX/src/KaMinPar" pull
    fi

    cmake -S "$PREFIX/src/KaMinPar" -B "$PREFIX/src/KaMinPar/build" -DCMAKE_BUILD_TYPE=Release
    cmake --build "$PREFIX/src/KaMinPar/build" --target dKaMinPar --parallel
    mkdir -p "$PREFIX/bin"
    cp "$PREFIX/src/KaMinPar/build/apps/dKaMinPar" "$(Binary)"
}

InvokeFromDisk() {
    graph="$1"
    k="$2"
    epsilon="$3"
    seed="$4"
    threads="$7"
    arguments="${@:8}"
    
    [[ -f "$graph.graph" ]] && graph="$graph.graph"
    [[ -f "$graph.metis" ]] && graph="$graph.metis"

    if [[ -f "$graph" ]]; then
        echo "$(Binary) -G $graph -k $k -e $epsilon --seed=$seed -t $threads $arguments"
    else 
        >&2 echo "Warning: Graph $graph does not exist"
        return 1
    fi
}
