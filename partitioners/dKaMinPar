#!/bin/bash

. "$script_pwd/../partitioners/inc/git.sh"
. "$script_pwd/../partitioners/inc/kagen-partitioner.sh"

# Controls how we partition KaGen graphs:
#
# - set to 0: use dKaMinPar binary + KaGen library
# - set to 1: use KaGen-Partitioner binary + KaGen library + dKaMinPar library
#
# The second option takes longer to build, but makes the process more inline 
# with the other partitioners.
# On SuperMUC, set to 0, since KaGen-Partitioner needs internet access (@todo).
DKAMINPAR_USE_KAGEN_DRIVER=1

# Controls whether we fetch the public version or the private fork
DKAMINPAR_USE_PUBLIC_REPOSITORY=0

Fetch() {
    local -n fetch_args=$1

    if (( ${fetch_args[install_disk]} )); then 
        FetchDiskDriver fetch_args
    fi
    if (( ${fetch_args[install_kagen]} )); then 
        FetchKaGenDriver fetch_args
    fi
}

FetchDiskDriver() {
    local -n fetch_disk_driver_args=$1

    if [[ $DKAMINPAR_USE_PUBLIC_REPOSITORY == 1 ]]; then
        GenericGitFetch fetch_disk_driver_args "git@github.com:KaHIP/KaMinPar.git" "install_dir_disk"
    else 
        GenericGitFetch fetch_disk_driver_args "git@github.com:DanielSeemaier/KaMinPar.git" "install_dir_disk"
    fi
}

FetchKaGenDriver() {
    local -n fetch_kagen_driver_args=$1

    if [[ $DKAMINPAR_USE_KAGEN_DRIVER == 1 ]]; then 
        GenericKaGenPartitionerFetch fetch_kagen_driver_args
    else
        FetchDiskDriver fetch_kagen_driver_args
    fi
}

Install() {
    local -n install_args=$1
    
    if (( ${install_args[install_disk]} )); then 
        InstallDiskDriver install_args
    fi
    if (( ${install_args[install_kagen]} )); then 
        InstallKaGenDriver install_args
    fi
}

InstallDiskDriver() {
    local -n install_disk_driver_args=$1

    src_dir="${install_disk_driver_args[install_dir_disk]}"
    cmake -S "$src_dir" -B "$src_dir/build" -DCMAKE_BUILD_TYPE=Release -DKAMINPAR_BUILD_DISTRIBUTED=On $CUSTOM_CMAKE_FLAGS ${install_disk_driver_args[build_options]}
    cmake --build "$src_dir/build" --target dKaMinPar --parallel
    cp "$src_dir/build/apps/dKaMinPar" "${install_disk_driver_args[binary_disk]}"
}

InstallKaGenDriver() {
    local -n install_kagen_driver_args=$1

    if [[ $DKAMINPAR_USE_KAGEN_DRIVER == 1 ]]; then 
        GenericKaGenPartitionerInstall install_kagen_driver_args -DBUILD_DKAMINPAR=On "dKaMinPar"
    else
        src_dir="${install_kagen_driver_args[install_dir_kagen]}"
        cmake -S "$src_dir" -B "$src_dir/build" -DCMAKE_BUILD_TYPE=Release -DKAMINPAR_BUILD_DISTRIBUTED=On $CUSTOM_CMAKE_FLAGS ${install_kagen_driver_args[build_options]}
        cmake --build "$src_dir/build" --target dKaMinPar --parallel
        cp "$src_dir/build/apps/dKaMinPar" "${install_kagen_driver_args[binary_kagen]}"
    fi
}

InvokeFromDisk() {
    local -n args=$1
    
    graph="${args[graph]}"
    [[ -f "$graph.graph" ]] && graph="$graph.graph"
    [[ -f "$graph.metis" ]] && graph="$graph.metis"
    [[ -f "$graph.bgf" ]] && graph="$graph.bgf"

    if [[ -f "$graph" ]]; then
        echo "${args[binary]} -G $graph -k ${args[k]} -e ${args[epsilon]} --seed=${args[seed]} -t ${args[num_threads]} -T ${args[algorithm_arguments]}"
    else 
        >&2 echo "Warning: Graph $graph does not exist"
        return 1
    fi
}

InvokeFromKaGen() {
    local -n args=$1
    echo -n "${args[binary]} "
    echo -n "--seed ${args[seed]} " 
    echo -n "-k ${args[k]} "
    echo -n "-t ${args[num_threads]} "
    echo -n "-e ${args[epsilon]} -T ${args[algorithm_arguments]} "
    echo -n "-G\"${args[kagen_arguments_stringified]}\""
    echo ""
}

